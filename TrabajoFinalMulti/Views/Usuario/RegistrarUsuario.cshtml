@model TrabajoFinalMulti.ViewModel.RegistroViewModel

@{
    ViewData["Title"] = "Registro";
    Layout = null;
}

<!DOCTYPE html>
<head>
    <title>Registro de Usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4">
            <h1 class="text-center">Registra un Nuevo Usuario</h1>
            <br />
            <form method="post" asp-action="RegistrarUsuario" class="w-100" id="registro-form">
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre del Usuario</label>
                    <input asp-for="Nombre" type="text" class="form-control" id="Nombre" name="Nombre" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Correo" class="form-label">Correo Electrónico del Usuario</label>
                    <input asp-for="Correo" type="email" class="form-control" id="Correo" name="Correo" required />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Contraseña" class="form-label">Contraseña del Usuario</label>
                    <div class="input-group">
                        <input asp-for="Contraseña" type="password" class="form-control" id="password" required />
                        <button type="button" class="btn btn-outline-secondary" id="ver-password">Ver contraseña</button>
                    </div>
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                    <div id="password-feedback"></div>
                </div>

                <!-- Tipo de usuario -->
                <br />
                <label class="form-label">Elige el tipo de Usuario</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="docente" name="TipoUsuario" value="docente" required>
                    <label class="form-check-label" for="docente">Docente</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" id="estudiante" name="TipoUsuario" value="estudiante" required>
                    <label class="form-check-label" for="estudiante">Estudiante</label>
                </div>
                <br />
                <button type="submit" class="btn btn-primary w-100">Registrar Usuario</button>
            </form>
        </div>
    </div>

    <form method="post" asp-controller="Usuario" asp-action="Logout" id="logout-form" class="text-center">
        <button type="submit" class="btn btn-danger">Cerrar Sesión</button>
    </form>

    <!--Scripts-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script>
        function validarContraseña() {
            const contraseñaInput = document.getElementById('password');
            const passwordFeedback = document.getElementById('password-feedback');
            const contraseña = contraseñaInput.value;

            const regex = /^(?=.*[A-Z])(?=.*\d).{5,}$/;

            if (regex.test(contraseña)) {
                passwordFeedback.textContent = 'Contraseña válida';
                passwordFeedback.classList.add('text-success');
                passwordFeedback.classList.remove('text-danger');
                return true;
            } else {
                passwordFeedback.textContent = 'Debe tener al menos 5 caracteres, una letra mayúscula y un número';
                passwordFeedback.classList.remove('text-success');
                passwordFeedback.classList.add('text-danger');
                return false;
            }
        }

        document.querySelector('#registro-form').addEventListener('submit', function (e) {
            var radios = document.querySelectorAll('input[name="TipoUsuario"]');
            var checked = false;
            radios.forEach(function (radio) {
                if (radio.checked) {
                    checked = true;
                }
            });

            if (!validarContraseña()) {
                e.preventDefault();
                alert('La contraseña no cumple con los requisitos.');
                return;
            }

            if (!checked) {
                e.preventDefault();
                alert('Por favor, seleccione Docente o Estudiante.');
            }
        });

        document.getElementById('ver-password').addEventListener('click', function () {
            const contraseñaInput = document.getElementById('password');
            contraseñaInput.type = contraseñaInput.type === 'password' ? 'text' : 'password';
            validarContraseña();
        });

        document.getElementById('password').addEventListener('input', function () {
            const passwordFeedback = document.getElementById('password-feedback');
            passwordFeedback.textContent = ''; // Limpiar el mensaje de error
        });

        // Validar la contraseña al hacer clic en "Registrar Usuario"
        document.getElementById('btn-registrar').addEventListener('click', function (e) {
            if (!validarContraseña()) {
                e.preventDefault();
                alert('La contraseña no cumple con los requisitos.');
            }
        });
    </script>


</body>
</html>
