@model IEnumerable<TrabajoFinalMulti.Models.Curso>
@{
    ViewData["Title"] = "Lista de cursos";
    Layout = "~/Views/Shared/_Diseño.cshtml";
}

<main class="h-full pb-16 overflow-y-auto">
    <div class="container grid px-6 mx-auto">
        <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
            Cursos Registrados
        </h2>
        <!-- With avatar -->
        <!-- With actions -->
        <h4 class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300">
            Lista de Cursos
        </h4>
        <div class="w-full overflow-hidden rounded-lg shadow-xs">
            <div class="w-full overflow-x-auto">
                @if (Model.Count() > 0)
                {
                    <table id="dataTable" class="w-full whitespace-no-wrap">
                        <thead>
                            <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                                <th class="px-4 py-3">N°</th>
                                <th class="px-4 py-3">Nombre</th>
                                <th class="px-4 py-3">Docente</th>                               
                                <th class="px-4 py-3">Nivel Educativo</th>                               
                                <th class="px-4 py-3">Grado</th>                              
                                <th class="px-4 py-3">Estudiantes</th>                              
                                <th class="px-4 py-3">Opciones</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">

                            @foreach (var cur in Model)
                            {
                                <!-- Filas de docentes y estudiantes combinados y ordenados -->
                                <tr class="text-gray-700 dark:text-gray-400">
                                    <td class="px-4 py-3">
                                        <div class="flex items-center text-sm">
                                            <!-- Avatar with inset shadow -->
                                            <div>
                                                <p class="font-semibold">@cur.Curso_Id</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-4 py-3 text-sm">
                                        <div class="flex items-center text-sm">
                                            <!-- Avatar with inset shadow -->
                                            <div>
                                                <p class="font-semibold">@cur.Curso_Nombre</p>
                                                <p class="text-xs text-gray-600 dark:text-gray-400">Curso</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-4 py-3 text-sm">
                                        @cur.Docente.Docente_Nombre @cur.Docente.Docente_Apellido
                                    </td>
                                    <td class="px-4 py-3 text-sm">
                                        @cur.Aula.Aula_NivelEducativo
                                    </td>
                                    <td class="px-4 py-3 text-sm">
                                        @cur.Aula.Aula_Grado
                                    </td>
                                    <td class="px-4 py-3 text-sm">
                                        <a class="px-3 py-1 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-md active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple" asp-action="AdministrarEstudiantes" asp-route-id="@cur.Curso_Id">Administrar</a>
                                    </td>
                                    <td class="px-4 py-3">
                                        <div class="flex items-center space-x-4 text-sm">

                                            <a class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-full active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple"
                                               aria-label="Edit" asp-action="EditarCurso" asp-route-id="@cur.Curso_Id">
                                                <svg class="w-5 h-5"
                                                     aria-hidden="true"
                                                     fill="currentColor"
                                                     viewBox="0 0 20 20">
                                                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                                                </svg>
                                            </a>

                                            <a a class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-red-600 border border-transparent rounded-full active:bg-red-600 hover:bg-red-700 focus:outline-none focus:shadow-outline-purple"
                                               aria-label="Delete" asp-action="BorrarCurso" asp-route-id="@cur.Curso_Id">
                                                <svg class="w-5 h-5"
                                                     aria-hidden="true"
                                                     fill="currentColor"
                                                     viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd"
                                                          d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z"
                                                          clip-rule="evenodd"></path>
                                                </svg>
                                            </a>

                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                }

            </div>
            
        </div>
    </div>
</main>