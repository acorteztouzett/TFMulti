@model IEnumerable<TrabajoFinalMulti.Models.AnuncioInformativo>
@{
    ViewData["Title"] = "Lista de Anuncios Informativos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-12 text-center">
        <h3>Lista de Anuncios Informativos</h3>
    </div>
    <br />
    <br />
    <div class="col-3 text-center">
        <a asp-action="RegistrarAnuncioInformativo" class="btn btn-primary form-control">Crear Anuncio Informativo</a>
    </div>
    <br />
    <br />
</div>
<div class="row justify-content-center">
    @if (Model.Count() > 0)
    {
        var numeroSecuencial = 1;
        <table class="table table-striped border align-items-center">
            <tr>
                <th>N°</th>
                <th>ID del anuncio</th>
                <th>URL del anuncio</th>
                <th>Opciones</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@numeroSecuencial</td>
                    <td>@item.Anuncio_Id</td>
                    <td><img src="@item.Anuncio_URL" alt="Imagen del anuncio" width="100" height="100" /></td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="EditarAnuncioInformativo" asp-route-id="@item.Anuncio_Id">Editar</a>
                        <a class="btn btn-danger text-white" asp-action="BorrarAnuncioInformativo" asp-route-id="@item.Anuncio_Id">Borrar</a>
                    </td>
                </tr>
                numeroSecuencial++;
            }
        </table>
    }
    else
    {
        <p>No hay anuncios informativos registrados</p>
    }
</div>
