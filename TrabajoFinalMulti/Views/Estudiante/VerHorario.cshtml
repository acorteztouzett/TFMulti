@model TrabajoFinalMulti.ViewModel.HorarioViewModel
@{
    ViewData["Title"] = "Horario";
    Layout = "~/Views/Shared/_DiseñoEstudiante.cshtml";
}

<div class="flex items-center justify-center py-8 px-4">
    <div class="max-w-sm w-full shadow-lg">
        <div class="md:p-8 p-5 dark:bg-gray-800 bg-white rounded-t">
            <div class="px-4 flex items-center justify-between">
                <span tabindex="0" class="focus:outline-none  text-base font-bold dark:text-gray-100 text-gray-800">Horario de Clases</span>
            </div>
            <div class="flex items-center justify-between pt-12 overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr>
                            <th>
                                <div class="w-full flex justify-center">
                                    <p class="text-base font-medium text-center text-gray-800 dark:text-gray-100">Lunes</p>
                                </div>
                            </th>
                            <th>
                                <div class="w-full flex justify-center">
                                    <p class="text-base font-medium text-center text-gray-800 dark:text-gray-100">Martes</p>
                                </div>
                            </th>
                            <th>
                                <div class="w-full flex justify-center">
                                    <p class="text-base font-medium text-center text-gray-800 dark:text-gray-100">Miércoles</p>
                                </div>
                            </th>
                            <th>
                                <div class="w-full flex justify-center">
                                    <p class="text-base font-medium text-center text-gray-800 dark:text-gray-100">Jueves</p>
                                </div>
                            </th>
                            <th>
                                <div class="w-full flex justify-center">
                                    <p class="text-base font-medium text-center text-gray-800 dark:text-gray-100">Viernes</p>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Repetir para cada hora de clase -->
                        <tr>
                            <!-- Lunes -->
                            <td class="pt-6">
                                @if (Model.Horarios.Count() > 0)
                                {

                                   @foreach (var cur in Model.Horarios)
                                        {
                                            if (@cur.Dia == "Lunes")
                                        {
                                            <div class="px-2 py-2 cursor-pointer flex w-full justify-center class-hour">
                                                @cur.Hora_Inicio :00 - @cur.Hora_Fin:00
                                            </div>

                                        }
                                        }
                                }
                            </td>
                            <!-- Martes -->
                            <td class="pt-6">
                                @if (Model.Horarios.Count() > 0)
                                {

                                    @foreach (var cur in Model.Horarios)
                                    {
                                        if (@cur.Dia == "Martes")
                                        {
                                            <div class="px-2 py-2 cursor-pointer flex w-full justify-center class-hour">
                                                @cur.Hora_Inicio :00 - @cur.Hora_Fin:00
                                            </div>

                                        }
                                    }
                                }
                            </td>
                            <!-- Miércoles -->
                            <td class="pt-6">
                                @if (Model.Horarios.Count() > 0)
                                {

                                    @foreach (var cur in Model.Horarios)
                                    {
                                        if (@cur.Dia == "Miercoles")
                                        {
                                            <div class="px-2 py-2 cursor-pointer flex w-full justify-center class-hour">
                                                @cur.Hora_Inicio :00 - @cur.Hora_Fin:00
                                            </div>

                                        }
                                    }
                                }
                            </td>
                            <!-- Jueves -->
                            <td class="pt-6">
                                @if (Model.Horarios.Count() > 0)
                                {

                                    @foreach (var cur in Model.Horarios)
                                    {
                                        if (@cur.Dia == "Jueves")
                                        {
                                            <div class="px-2 py-2 cursor-pointer flex w-full justify-center class-hour">
                                                @cur.Hora_Inicio :00 - @cur.Hora_Fin:00
                                            </div>

                                        }
                                    }
                                }
                            </td>
                            <!-- Viernes -->
                            <td class="pt-6">
                                @if (Model.Horarios.Count() > 0)
                                {

                                    @foreach (var cur in Model.Horarios)
                                    {
                                        if (@cur.Dia == "Viernes")
                                        {
                                            <div class="px-2 py-2 cursor-pointer flex w-full justify-center class-hour">
                                                @cur.Hora_Inicio :00 - @cur.Hora_Fin:00
                                            </div>

                                        }
                                    }
                                }
                            </td>
                        </tr>
                        <!-- Continuar con más filas según sea necesario -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .class-hour {
        background-color: #ADD8E6; /* Color de fondo para las horas de clase */
    }
</style>
