@model Estudiante

@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "~/Views/Shared/_DiseñoEstudiante.cshtml";
}

<main class="h-full pb-16 overflow-y-auto">
    <div class="container px-6 mx-auto grid">
        <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
            Editar
        </h2>
        <!-- CTA -
        <!-- General elements -->
        <h4 class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300">
            Perfil de Estudiante
        </h4>
        <form method="post" asp-controller="Estudiante" asp-action="EditarPerfil" id="registro-form" enctype="multipart/form-data">

            <input type="hidden" asp-for="Estudiante_Id" />
            <input asp-for="Apoderado_Id" type="hidden" readonly />
            <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

            <div class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800">

