@{
    ViewData["Title"] = "Registro";
}
<!DOCTYPE html>
<head>
    <title>Registro de Profesores y Alumnos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4">
            <h1 class="text-center">Registra tus datos aquí</h1>

            <form class="w-100">
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" required>
                </div>

                <div class="mb-3">
                    <label for="correo" class="form-label">Correo Electrónico</label>
                    <input type="email" class="form-control" id="correo" name="correo" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" required>
                        <button type="button" class="btn btn-outline-secondary" id="ver-password">Ver contraseña</button>
                    </div>
                    <div id="password-feedback"></div>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" id="es-alumno" name="tipo-usuario" value="alumno" required>
                    <label class="form-check-label" for="es-alumno">Soy Alumno</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="es-profesor" name="tipo-usuario" value="profesor" required>
                    <label class="form-check-label" for="es-profesor">Soy Profesor</label>
                </div>

                <button type="submit" class="btn btn-primary w-100">Registrarme</button>
            </form>

            <button class="btn btn-secondary mt-3">Ya tengo cuenta</button>
        </div>
        
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

    @* script que ve la contraseña *@
    <script>
        document.getElementById('ver-password').addEventListener('click', function () {
            var contrasenaInput = document.getElementById('password');
            if (contrasenaInput.type === 'password') {
                contrasenaInput.type = 'text';
            } else {
                contrasenaInput.type = 'password';
            }
        });
    </script>
    @* script que valida contrasñea *@
    <script>
        const contraseñaInput = document.getElementById('password');
        const passwordFeedback = document.getElementById('password-feedback');

        contraseñaInput.addEventListener('input', function () {
            const contraseña = contraseñaInput.value;

            const regex = /^(?=.*[A-Z])(?=.*\d).{5,}$/;

            if (regex.test(contraseña)) {
                passwordFeedback.textContent = 'Contraseña válida';
                passwordFeedback.classList.add('text-success');
                passwordFeedback.classList.remove('text-danger');
            } else {
                passwordFeedback.textContent = 'Debe tener al menos 5 caracteres, una letra mayúscula y un número';
                passwordFeedback.classList.remove('text-success');
                passwordFeedback.classList.add('text-danger');
            }
        });
    </script>

</body>
</html>


